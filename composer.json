{
    "name": "tavosud/shortlink-api",
    "description": "A simple URL shortener API built with Slim Framework",
    "authors": [
        {
            "name": "Gustavo Cuyutupa",
            "email": "gustavocuyutupa@outlook.com",
            "role": "Developer"
        }],
    "config": {
        "process-timeout": 0
    },
    "scripts": {
        "start": "php -S localhost:8100 -t public/"
    },
    "require": {
        "slim/slim": "^4.15",
        "slim/psr7": "^1.7",
        "php-di/php-di": "^7.1",
        "firebase/php-jwt": "^6.11",
        "vlucas/phpdotenv": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    }
}
